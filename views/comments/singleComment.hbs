<h1>{{comment.name}}</h1>
<p>{{comment.response}}</p>

<a class="users" href='/posts'>Return To All Posts</a>

<form method="POST" action="/posts/{{postId}}/comments/{{comment._id}}?_method=DELETE">
    <input type="submit" value="Delete Post" />

</form>

<a class="users" href="/posts/{{postId}}/comments/{{comment._id}}/responses/new">Respond To This Comment</a>

{{#each responses}}
<a class='test' href="/posts/{{../post._id}}/comments/{{../comment._id}}/responses/{{_id}}">View Response</a>
<h4 class='test'>Username: {{name}}</h4>
<p class='test'>Response: {{response}}</p>
{{!-- <a class="users" href='/posts/{{_id}}/comments/edit'>Edit Comments</a> --}}
{{/each}}


