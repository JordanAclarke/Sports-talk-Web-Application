<h1>{{post.category}}</h1>
<p>{{post.status}}</p>
<p>{{post.post}}</p>
<p>{{post.created_at}}</p>

<a href="/posts/{{post._id}}/edit">Edit Post</a>
<form method="POST" action="/posts/{{post._id}}?_method=DELETE">
    <input type="submit" value="Delete Post" />

</form>

<h3>Comments</h3>
<ul>
    {{#each comment}}
        <li>{{response}}</li>
    {{/each}}
</ul>
