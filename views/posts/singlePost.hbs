<h1>{{post.category}}</h1>
<p>{{post.status}}</p>
<p>{{post.post}}</p>
<p>Posted At: {{post.created_at}}</p>

<a class="users" href='/posts'>Return To All Posts</a>
<a class="users" href="/posts/{{post._id}}/edit">Edit Post</a>
<form method="POST" action="/posts/{{post._id}}?_method=DELETE">
    <input type="submit" value="Delete Post" />

</form>

<a class="users" href="/posts/{{post._id}}/comments/new">Comment on this post</a>
&nbsp;
<h3 class="users">Comments: </h3>

{{#each comments}}
<a class="users" href="/posts/{{../post._id}}/comments/{{_id}}">View Comment</a>
<h4 class='test'>Username: {{name}}</h4>
<p class='test'>Response: {{response}}</p>
{{!-- <a class="users" href='/posts/{{_id}}/comments/edit'>Edit Comments</a> --}}
{{/each}}

